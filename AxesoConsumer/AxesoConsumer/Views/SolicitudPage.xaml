                                            HeightRequest="60"
                                            Source="{Binding Imagen}"
                                            WidthRequest="60" />

                                    </StackLayout>
                                    <StackLayout 
                                        VerticalOptions="CenterAndExpand" 
                                        BackgroundColor="#f7f7f7"
                                        WidthRequest="200">
                                        <Label
                                            FontFamily="{StaticResource PingFangMedium}"
