                                            TextColor="#2E2E2E" 
                                            Text="{Binding UnidadNombreSelect}" />
                                        </StackLayout>
                                        <StackLayout
                                            Orientation="Horizontal">
                                            <Label
                                            FontFamily="{StaticResource PingFangMedium}"
                                            FontSize="11"
                                            TextColor="#2E2E2E" 
                                            Text="Cantidad:" />
                                            <Label
                                            FontFamily="{StaticResource PingFangMedium}"
                                            FontSize="11"
                                            Text="{Binding Cantidad }"
                                            TextColor="#2E2E2E" 
                                            HorizontalOptions="Start"/>
                                           
                                            <Label
                                            FontFamily="{StaticResource PingFangMedium}"
                                            FontSize="11"
                                            Text="{Binding UnidadNombreSelect }"
                                            TextColor="#2E2E2E" 
                                            HorizontalOptions="Start"/>
                                        </StackLayout>
                                    </StackLayout>
