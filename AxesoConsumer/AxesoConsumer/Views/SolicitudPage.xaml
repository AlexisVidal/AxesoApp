            <StackLayout
                    Margin="0,10,0,0"
                    BackgroundColor="White"
                    HeightRequest="50"
                    Orientation="Horizontal"
                    Spacing="0">
                <Image
                        Margin="10,0,0,0"
                        HeightRequest="30"
                        HorizontalOptions="Start"
                        Source="back"
                        WidthRequest="25">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BackButton" />
                    </Image.GestureRecognizers>
                </Image>
                <Label
                        Margin="-15,0,0,0"
                        FontFamily="{StaticResource PingFangMedium}"
                        FontSize="15"
                        HorizontalOptions="CenterAndExpand"
                        LineBreakMode="TailTruncation"
                        Text="Solicitud"
                        TextColor="#2E2E2E"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center"></Label>
            </StackLayout>
            <StackLayout
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand">
                <Label
                    Margin="15,5,15,0"
                    Text="Direccion:"
                    FontFamily="{StaticResource PingFangRegular}"
                    TextColor="Black"
                    FontSize="12"></Label>
                <Label
                    x:Name="AddressLabel"
                    Margin="15,0,15,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalTextAlignment="Start"
                    LineBreakMode="WordWrap"
                    FontSize="12"
                    TextColor="Black"
                    FontFamily="{StaticResource PingFangRegular}"></Label>
            </StackLayout>
