                <Label
                FontAttributes="Bold"
                FontSize="16"
                FontFamily="{StaticResource PingFangBold}"
                HorizontalOptions="CenterAndExpand"
                Text="AVISO" />
                <Label 
                    x:Name="lSuccess"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="12"
                    FontFamily="{StaticResource PingFangBold}"
                    HorizontalOptions="CenterAndExpand" 
                    HorizontalTextAlignment="Center"/>
                <Button
                    x:Name="AcceptSuccess"
                    BackgroundColor="#F4F4F4"
                    TextColor="{StaticResource FontColor}"
                    BorderRadius="6"
                    Text="ACEPTAR"
                    HeightRequest="46"
                    Margin="55,20,55,0"
                    Clicked="AcceptSuccess_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
